<div class="container mt-3">
  <div class="row justify-content-center">
  <% @restaurants.each do |restaurant| %>
<div class="card mx-3 mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=restaurant.name%></h5>
        <p class="card-text"><%=restaurant.address%></p>
        <p class="card-text"><small class="text-muted"><%= restaurant.category %></small></p>
        <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary justify-content-center"%>
      </div>
    </div>
  </div>
</div>
       <% end %>
  </div>
</div>
<a href="#">Back to top</a>
